<div class="text-center">

  <h1>Welcome to our workstation rental !</h1>

  <% unless signed_in? %>
    <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary btn-line" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary btn-line" %>
  <% end %>

  <%= link_to "All workstations", workstations_path, class: "btn btn-outline-primary btn-line" %>

